<div class="container body-content">

    <h1>@ViewBag.title</h1>

    @{
        //TODO #1: Use a loop to display job results in a table.
    }

    @foreach (var item in ViewBag.jobs)
    {
        <table class="job-listing">
            <tr>
                <td>ID: </td>
                <td>@item.Id</td>
            </tr>
            <tr>
                <td>Name: </td>
                <td>@item.Name</td>
            </tr>
            <tr>
                <td>Employer: </td>
                <td>@item.Employer</td>
            </tr>
            <tr>
                <td>Location: </td>
                <td>@item.Location</td>
            </tr>
            <tr>
                <td>Position Type: </td>
                <td>@item.PositionType</td>
            </tr>
            <tr>
                <td>Core Competency: </td>
                <td>@item.CoreCompetency</td>
            </tr>
        </table>
    }
</div>